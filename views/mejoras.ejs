<!DOCTYPE html>
<html>

<head>
    <%- include partials/head %>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/mejoras.css' />

    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>

<body>
    <div class="container-fluid">

        <!--Navbar-->
        <%- include partials/navbar %>

        <div class="row">
            <form class="col justify-content-center user-form" method="POST" action="/mejoras/insertUser" enctype="application/x-www-form-urlencoded">
                <div class="form-group">
                    <label for="name">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" aria-describedby="nameHelp"
                        placeholder="Escriba su nombre de usuario">
                </div>
                <div class="form-group">
                    <label for="email">Correo electrónico</label>
                    <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp"
                        placeholder="Escriba su correo">
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña">
                </div>
                <div class="form-buttons">
                    <button type="submit" id="submit" class="btn btn-register">Registrar</button>
                    <button type="reset" class="btn btn-clear">Limpiar formulario</button>
                </div>
            </form>
        </div>



        <!--Footer-->
        <br><%- include partials/footer %>

    </div>
</body>




</html>